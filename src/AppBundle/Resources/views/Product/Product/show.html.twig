{% extends 'admin/base.html.twig' %}

{% block body %}
    <h1>Product</h1>
    <div class="col-md-8 compose-right">
        <div class="inbox-details-default">
            <div class="inbox-details-heading">
                <li>
                    <a href="{{ path('product_product_index') }}">Back to the list</a>
                </li>
            </div>
            <div class="inbox-details-body">
                <div class="alert alert-info">
                    You Can Show Detail Of This Product
                </div>
                <table>
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ product.id }}</td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>{{ product.name }}</td>
                        </tr>
                        <tr>
                            <th>Sku</th>
                            <td>{{ product.sku }}</td>
                        </tr>
                        <tr>
                            <th>Price</th>
                            <td>{{ product.price }}</td>
                        </tr>
                        <tr>
                            <th>Quantity</th>
                            <td>{{ product.quantity }}</td>
                        </tr>
                        <tr>
                            <th>Description</th>
                            <td>{{ product.description }}</td>
                        </tr>
                    </tbody>
                </table>

                <ul>
                    <li>
                        <a href="{{ path('product_product_index') }}">Back to the list</a>
                    </li>
                    <li>
                        <a href="{{ path('product_product_edit', { 'id': product.id }) }}">Edit</a>
                    </li>
                    <li>
                        {{ form_start(delete_form) }}
                        <input type="submit" value="Delete">
                        {{ form_end(delete_form) }}
                    </li>
                </ul>
            </div>
        </div>
    </div>
{% endblock %}
