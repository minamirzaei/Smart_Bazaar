{% extends 'admin/base.html.twig' %}

{% block body %}
    <div class="blank">
        <h2>Category</h2>
        <div class="blankpage-main">


            <table>
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ category.id }}</td>
                    </tr>
                    <tr>
                        <th>Title</th>
                        <td>{{ category.title }}</td>
                    </tr>
                </tbody>
            </table>

            <ul>
                <li>
                    <a href="{{ path('product_category_index') }}">Back to the list</a>
                </li>
                <li>
                    <a href="{{ path('product_category_edit', { 'id': category.id }) }}">Edit</a>
                </li>
                <li>
                    {{ form_start(delete_form) }}
                    <input type="submit" value="Delete">
                    {{ form_end(delete_form) }}
                </li>
            </ul>
        </div>
    </div>
{% endblock %}
